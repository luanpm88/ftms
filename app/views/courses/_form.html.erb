       <div class="row">
            <div class="col-md-12">
              <div class="grid simple">
                <div class="grid-titles no-border">
                  <h4><span class="semi-bold">Course Details</span></h4>
                  
                </div>     
                
                <div class="grid-body no-border">
                  
                  
                  <% if @course.errors.any? %>
                    <div class="alert alert-error">
                      <button data-dismiss="alert" class="close"></button>
                      <div id="error_explanation">
                        <h5><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h5>
                  
                        <ul>
                        <% @course.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                        </ul>
                      </div>
                    </div>
                  <% end %>
                    
                 
                  
                  
                  <%= form_for(@course) do |f| %>
					
					<%= hidden_field_tag("tab_page", 1) if params[:tab_page] %>
					
					<div class="row column-seperation">
						 <div class="col-md-6">
                          
                            <div class="row">
                                  <div class="col-md-5">
                                       <div class="form-group">
                                         <label class="form-label"><%= f.label :intake %></label>
                                         <span class="help">(required)</span>
                                         <div class="input-with-icon date-group right">                                       
                                              <i class=""></i>
                                              <%= f.date_select :intake, use_short_month: true %>
                                         </div>
                                       </div>
                                  </div>
								  <div class="col-md-7">
                                       <div class="form-group">
										<label class="form-label"><%= f.label :Lecturer %></label>
										<span class="help"></span>
										<div class="input-with-icon  right">                                       
											 <i class=""></i>
											 <div class="input-with_add_but">
												  <%= link_to '<i class="icon-plus"></i>'.html_safe, new_contact_path(contact_type_id: ContactType.lecturer.id, tab_page: 1), title: "New Lecturer", :class => 'btn btn-sm btn-small btn-white add-agent-button tab_page' %>
												  <input style="width:100%;margin-bottom: 5px;" name="course[lecturer_id]" data="<%= contacts_path(format: "json", contact_type_id: ContactType.lecturer.id) %>" class="select2-ajax-contacts" value="<%= @course.lecturer_id %>" text="<%= @course.lecturer.name if !@course.lecturer.nil? %>" />
											 </div>
										</div>
								   </div>	
                                  </div>
                             </div>
                              
                              <!--<div class="form-group">
                                    <label class="form-label"><%= f.label :program %></label>
                                    <span class="help">(required)</span>
                                    <div class="input-with-icon  right">                                       
                                           <i class=""></i>
                                           <div class="input-with_add_but">
                                                  <%= link_to '<i class="icon-plus"></i>'.html_safe, new_course_type_path(tab_page: 1), title: "New Course Type", :class => 'btn btn-sm btn-small btn-white add-agent-button tab_page' %>
                                                  <input style="width:100%;margin-bottom: 5px;" name="course[course_type_id]" data="<%= course_types_path(format: "json") %>" class="select2-ajax-course-types required" value="<%= @course.course_type_id %>" text="<%= @course.course_type.short_name if !@course.course_type.nil? %>" /> 
                                           </div>
                                                                                     
                                     
                                    </div>
                               </div>-->
								   
							  
										<div class="form-group">
											 <label class="form-label"><label>Course</label></label>
											 <span class="help">(required)</span>
											 <div class="input-with-icon date-group right">                                       
												  <i class=""></i>
												  <div class="input-with_add_but">
														 <%= link_to '<i class="icon-plus"></i>'.html_safe, new_subject_path(tab_page: 1), title: "New Paper", :class => 'btn btn-sm btn-small btn-white add-agent-button tab_page' %>
														 <input style="width:100%;margin-bottom: 5px;" name="program_paper" data="<%= course_types_subjects_path(format: "json") %>" class="select2-ajax-course-types-subjects required" value="<%= @course.program_paper_id %>" text="<%= @course.program_paper_name %>" /> 
												  </div>
											 </div>
										</div>
							  													   
								   		
							  
                              
							  
							  
							  
							  
						 </div>
						 
						 <div class="col-md-6">
							  <div class="form-group">
								   <label class="form-label"><%= f.label :phrase %></label>
								   <span class="help"></span>
								   
								   <% num = 0 %>
								   <% @course.courses_phrases.each do |courses_phrase| %>
										<div class="row phrase_box phrase_box_<%= num %>">
											 <div class="col-md-7">
												  <div class="input-with-icon  right">                                       
													   <i class=""></i>
													   <div class="input-with_add_but">
															<%= link_to '<i class="icon-plus"></i>'.html_safe, new_phrase_path(tab_page: 1), title: "New Phrase", :class => 'btn btn-sm btn-small btn-white add-agent-button tab_page' %>
															<input style="width:100%;margin-bottom: 5px;" name="courses_phrases[<%= num.to_s %>][phrase_id]" data="<%= phrases_path(format: "json") %>" class="select2-ajax-subjects" value="<%= courses_phrase.phrase.id %>" text="<%= courses_phrase.phrase.name %>" /> 
													   </div>
												  </div>
											 </div>
											 <div class="col-md-4">											 
												  <div class="input-with-icon  right">                                       
													   <i class=""></i>
													   <div class="input-append success date col-md-10 no-padding">
														 <%= text_field_tag "courses_phrases["+num.to_s+"][start_at]", courses_phrase.start_at.strftime("%d-%b-%Y"), :class => "form-control" %>
														 <span class="add-on"><span class="arrow"></span><i class="icon-th"></i></span>
													   </div>
													   <br style="clear: both" />
												  </div>																 
											 </div>
										</div>
										<% num += 1 %>
								   <% end %>
								   
								   <% (num..9).each do |number| %>
										<div class="row phrase_box phrase_box_<%= number %>" <%= 'style="display:none"'.html_safe if number > num %>>
											 <div class="col-md-7">
												  <div class="input-with-icon  right">                                       
													   <i class=""></i>
													   <div class="input-with_add_but">
															<%= link_to '<i class="icon-plus"></i>'.html_safe, new_phrase_path(tab_page: 1), title: "New Phrase", :class => 'btn btn-sm btn-small btn-white add-agent-button tab_page' %>
															<input style="width:100%;margin-bottom: 5px;" name="courses_phrases[<%= number.to_s %>][phrase_id]" data="<%= phrases_path(format: "json") %>" class="select2-ajax-subjects main_input" values="" /> 
													   </div>
												  </div>
											 </div>
											 <div class="col-md-4">											 
												  <div class="input-with-icon  right">                                       
													   <i class=""></i>
													   <div class="input-append success date col-md-10 no-padding">
														 <%= text_field_tag "courses_phrases["+number.to_s+"][start_at]", "", :class => "form-control" %>
														 <span class="add-on"><span class="arrow"></span><i class="icon-th"></i></span>
													   </div>
													   <br style="clear: both" />
												  </div>																 
											 </div>
										</div>
								   <% end %>
								   
							  </div>
							  
							  
						 </div>
						 
					</div>
						 
					<div class="form-actions">  
						 <div class="pull-right">
						 <button type="submit" class="btn btn-success btn-cons"><i class="icon-ok"></i> Save</button>
						  <%= link_to 'Cancel', users_path, :class => "btn btn-white btn-cons cancel-but" %>
					   </div>
					</div>
							  
						<% end %>
			   </div>
			 </div>
            </div>
			
      </div>


