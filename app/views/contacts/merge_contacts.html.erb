<ul class="breadcrumb">
    <li>
        <p>YOU ARE HERE</p>
    </li>
    <li>
        <%= link_to 'Contacts', contacts_url, :class => "active" %>
    </li>
</ul>
<div class="page-title">
    <i class="icon-group"></i>
    <h3><span class="semi-bold"> <%= params[:type] == "merged" ? "Merged Contacts" : "Find Related Contacts" %></span></h3>
</div>
<% if params[:type] != "merged" %>
	<style>
		.dataTables_paginate .paginate_button {
			display: none !important;
		}
		.dataTables_paginate .paginate_button.previous, .dataTables_paginate .paginate_button.next {
			display: inline-block !important;
		}
	</style>
<% end %>
<div class="top_buttons">
							<%= link_to 'Merged Contacts', merge_contacts_contacts_path(tab_page: 1, type: "merged"),title: "Merged Contacts", :class => 'btn btn-info btn-cons tab_page pull-right' %>
                            <%= link_to 'Find Related Contacts', merge_contacts_contacts_path(tab_page: 1),title: "Find Related Contacts", :class => 'btn btn-white btn-cons tab_page pull-right' %>
							
				</div>

			
                <div class="row order-filters hidden">
					  <div class="col-md-3 merge-contact-filter">
						  <h4>Type</h4>							
						  <%= select_tag 'type', options_for_select([["Find Related Contacts","related"],["Merged Contacts","merged"]], params[:type]), class: "modern_select width100" %>
					  </div>
				</div>


<%= form_tag("", {class: "listing_form", method: "post", target: "_blank"}) do |f| %>

    <div class="row">
        <div class="col-md-12">
            
				<div class="listing_box_actions">
					<% if params[:type] != "merged" %>
						<div class="btn-group listing_actions"> <a href="#" data-toggle="dropdown" class="btn btn-white dropdown-toggle btn-demo-space"> List Actions (<span class="listing_checked_count">0</span>)<span class="caret"></span> </a>
							<ul class="dropdown-menu">                        
								<li><a href="#" rel="<%= do_merge_contacts_path(tab_page: 1) %>" type="ajax">Merge Selected Contacts</a></li>
							</ul>
						</div>
						<!--<div class="checkbox check-default check_all_page_but" style="display: inline-block">
							<input name="check_all_page" id="checkbox_all_page" type="checkbox" value="all_page" class="check_all_page">
							<label for="checkbox_all_page">Select All Pages</label>
						</div>-->
					<% end %>
				</div>
			
            <div class="grid simple">

                <div class="grid-body no-border">


                    <table class="table no-more-tables datatable-merge-contacts no-filter">
                        <thead>
                            <tr>
                                <th>
                                    <div class="checkbox check-default">
                                        <input id="checkbox_all" type="checkbox" value="all" class="checkall">
                                        <label for="checkbox_all"></label>
                                    </div>
                                </th>
                                <!--<th width="1%" class="text-center">Avatar</th>-->
                                <th class="text-left">Name/Info</th>
                                <th class="text-left">Type: Program</th>
                                <th class="text-center">
                                    <span class="personal-box">Course</span>
                                    <span class="company-box">Student</span>
                                </th>
                                <!--<th class="text-left">Company</th>-->
                                <th class="text-center">Tag</th>
                                <th class="text-center">Created on</th>
                                <th class="text-center">Education Consultant</th>
                                <th class="text-center">Status</th>
                                <th class="text-right">Actions</th>
                            </tr>
                        </thead>
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>

    <% end %>