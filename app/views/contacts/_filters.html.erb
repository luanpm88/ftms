<div class="grid simple " id="contact_filter" style="margin-bottom: 10px">
				<div class="grid-body no-border filters contact-filter">

						<div class="row order-filters">
						
						
							<div class="col-md-3 type-contact-filter">
								<h4>Contact Types</h4>
								

									  <div class="input-with-icon right">
											<select name="is_individual" class="modern_select is_individual width100">
												<option value="true">Individual</option>
												<option value="false">Company/Organization</option>
											</select>											
									  </div>


								<div style="margin-top: 20px;" class="personal-box">
									  <div class="input-with-icon right">                                       
											  <i class=""></i>
												<% ContactType.all.each do |ct| %>
													 <div class="row-fluid contact_types">
														  <div class="checkbox check-success">
															  <%= check_box_tag "contact_types[]", ct.id, @types.include?(ct.id.to_s), {id: "checkbox"+ct.id.to_s } %>
															  <label for="checkbox<%= ct.id %>"><%= ct.name %></label>
														  </div>
													 </div>
												<% end %>
												<br style="clear: both" />
									  </div>
								</div>
						  </div>
							
							<div class="col-md-3 personal-box">
								<h4>Intake</h4>
								<div class="date_select_filter">
									<div class="input-with-icon date-group-my right">                                       
									<%= date_select(:filter, :intake, {include_blank: true, use_short_month: true, start_year: 2015}) %>
									</div>
								</div>
							</div>
							
								<div class="program_paper_select_box">
											<div class="col-md-2 personal-box">
												<h4>Program</h4>							
												<%= select_tag 'course_types[]', options_for_select(CourseType.active_course_types.collect{ |u| [u.short_name, u.id] }), class: "modern_select width100 program_select", multiple: "multiple", input_name: "subjects[]" %>
											</div>
											<div class="col-md-2 seminar-contact-filter personal-box">
												<h4>Status</h4>							
												<%= select_tag "base_status", options_for_select(Contact.base_status_options), class: "modern_select width100" %>
											</div>
											<div class="col-md-2 personal-box">
												<h4>Paper</h4>
												<span class="paper_select_box">
													<%= select_tag 'subjects[]', options_for_select(Subject.active_subjects.collect{ |u| [u.name, u.id] }), class: "modern_select width100", multiple: "multiple" %>
												</span>
											</div>
								</div>	
							
							
							
							
							
							
							
