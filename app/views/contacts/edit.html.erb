<ul class="breadcrumb">
        <li>
          <p>YOU ARE HERE</p>
        </li>
                    <li>
			<%= link_to 'Contacts', contacts_url, :class => "active" %>
                    </li>
      </ul>
      <div class="page-title pull-left"> <i class="icon-user"></i>
        <h3 class="nowrap"><span class="semi-bold"><%= @contact.display_name %></span></h3>
		
      </div>
      <%= render_contacts_actions(@contact, "big") %>

	  
		<div class="row">
            <div class="col-md-12">
              <div class="grid simple">
                <div class="grid-title no-border">
                  
                  
                </div>     
                
                
                
                
					<div class="grid-body no-border">
					  
					  
						 <ul class="nav nav-pills inner-tab" id="tab-01">
								<li class="<%= "active" if ["information",nil].include?(params[:tab]) %>"><a href="#information">Information</a></li>
								<% if @contact.contact_types.include?(ContactType.student) %>
										<li class="<%= "active" if ["course"].include?(params[:tab]) %>">
										  <a href="#course">Course List (<%= @contact.course_count %>)</a>
										</li>
										<li class="<%= "active" if ["book"].include?(params[:tab]) %>">
										  <a href="#book">Stock List (<%= @contact.book_count %>)</a>
										</li>
										<li class="<%= "active" if ["course_registration"].include?(params[:tab]) %>">
										  <a href="#course_registration">Course Registration (<%= @contact.course_register_count %>)</a>
										</li>
										<li class="<%= "active" if ["payment"].include?(params[:tab]) %>">
										  <a href="#payment">Payment Record</a>
										</li>
										
								<% end %>
								<li class="<%= "active" if ["activity"].include?(params[:tab]) %>">
										<a href="#activity">Activity Log</a>
								</li>
						 </ul>
						 <div class="tools"> <a href="javascript:;" class="collapse"></a> <a href="#grid-config" data-toggle="modal" class="config"></a> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
						 <div class="tab-content" style="margin-bottom: 0;">
								<div class="tab-pane <%= "active" if ["information",nil].include?(params[:tab]) %>" id="information">
								
										<%= render 'form' %>
								
								</div>
								<div class="tab-pane <%= "active" if ["course"].include?(params[:tab]) %>" id="course">
										
										<%= render "courses/filters" %>
										
										<style>
												.student-course-filter {
														position: absolute;
														top: -90000px;
												}
										</style>
										
										<div class="row">
												<div class="col-md-12">													
													<div class="grid simple ">
														<div class="grid-title no-border">
															<h4>Listing  <span class="semi-bold">Course</span></h4>															
														</div>
														
														
														
														<div class="grid-body no-border">															 
																<table class="table table-striped no-more-tables datatable-student-courses no-filter">
																	<thead>
																		<tr>                                                
																			<th class="text-left" width="1%">Intake</th>
																			<th class="text-left nowrap">Course</th>
																			<!--<th class="text-center">Student Num</th>-->
																			<th class="text-left">Phrase [Date]</th>
																			<th class="text-center">Lecturer</th>
																			<th class="text-center">Created On</th>																			
																			<th class="text-right" width="1%">Actions</th>
																		</tr>
																	</thead>                                        
																</table>
														</div>
													</div>
										
												</div>
										
										</div>
								</div>
					
								<div class="tab-pane <%= "active" if ["course_registration"].include?(params[:tab]) %>" id="course_registration">
										
										<%= render "course_registers/filter" %>
										
										<style>
												.student-course-register-filter {
														position: absolute;
														top: -90000px;
												}
										</style>
										
										<div class="row">
												<div class="col-md-12">
													<%= link_to 'New Registration', new_course_register_path(conact_id: @contact.id, tab_page: 1), psrc: course_registers_path(tab_page:1), title: "New Registration", :class => 'btn btn-primary btn-cons tab_page' %>
													<div class="grid simple ">
														<div class="grid-title no-border">
															<h4>Listing  <span class="semi-bold">Registration</span></h4>
															
														</div>
														<div class="grid-body no-border">
															 
																<table class="table table-striped no-more-tables datatable-student-course-registers no-filter">
																	<thead>
																		<tr>                                                
																			<th>Student Name</th>
																			<th class="text-left">Course</th>
																			<th class="text-left">Stock</th>
																			<th class="text-right">Total</th>
																			<th class="text-center">Payment</th>
																			<th class="text-center">Receipt Date</th>
																			<th class="text-center" width="1%">Creator</th>
																			<th class="text-right" width="1%">Actions</th>
																		</tr>
																	</thead>                                        
																</table>
														</div>
													</div>
										
												</div>
										
											</div>
										
								</div>
								<div class="tab-pane <%= "active" if ["book"].include?(params[:tab]) %>" id="book">
								
										<%= render "books/filters" %>
										
										<style>
												.student-book-filter {
														position: absolute;
														top: -90000px;
												}
										</style>
                
										<div class="row">
											<div class="col-md-12">
												
												<div class="grid simple ">
													<div class="grid-title no-border">
														<h4>Listing  <span class="semi-bold">Books</span></h4>
														
													</div>
													<div class="grid-body no-border">
														 
															<table class="table table-striped no-more-tables datatable-student-books no-filter">
																<thead>
																	<tr>                                                
																		<th width="1%">Cover</th>
																		<th>Title</th>
																		<th>Volumns</th>
																		<th class="text-center">Program</th>
																		<th class="text-center">Paper</th>
																		<th>Publisher</th>
																		<th class="text-right">Buyed Price</th>
																		<th class="text-center">Created on</th>
																		<th class="text-center">Delivery</th>
																		<th class="text-center" width="1%">Staff</th>
																	</tr>
																</thead>                                        
															</table>
													</div>
												</div>
									
											</div>
									
										</div>
								
								</div>
			
								<div class="tab-pane <%= "active" if ["payment"].include?(params[:tab]) %>" id="payment">
										<%= render "payment" %>
								</div>
								<div class="tab-pane <%= "active" if ["activity"].include?(params[:tab]) %>" id="activity">
										<%= render "activity" %>
								</div>
						 </div>
								  
					</div>
					
				
              </div>
            </div>		
      </div>