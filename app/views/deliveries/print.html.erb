<style>
  * {
    font-family: arial;
  }
  .page {
    padding: 20px;
  }
  .logo img {
    width: 300px;
  }
  .heading {
    text-align: center;
  }
  .text-left {
    text-align: left;
  }
  .text-center {
    text-align: center;
  }
  .list {
    width: 100%;
    margin-top: 20px;
    border-left: 1px solid #000000;
    border-top: 1px solid #000000;
    border-bottom: none;
    border-right: none;
  }
  .list th {
      background: none repeat scroll 0 0 #EFEFEF;
      border-bottom: 1px solid #000000;
      border-right: 1px solid #000000;
      border-top: none;
      border-left: none;
      padding: 5px;
  }
  .list td {
      border-bottom: 1px solid #000000;
      border-right: 1px solid #000000;
      border-top: none;
      border-left: none;
      padding: 5px;
  }
</style>

<div class="page">
  <div class="logo">
    <img src="<%= url_for("/img/FTMSGlobalNew.png") %>" class="login-logo" />
  </div>
  
  <div class="heading">
    <h1>DELIVERY NOTE</h1>
  </div>
  
  
  <table cellpadding="5">
    <tr>
      <td>
        <strong>Student:</strong>
      </td>
      <td width="60%">
        <%= @delivery.course_register.contact.display_name %>
      </td>
      <td>
        <strong>Date:</strong>
      </td>
      <td>
        <%= @delivery.delivery_date.strftime("%d-%b-%Y") %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Company:</strong>
      </td>
      <td colspan="2">
        <%= @delivery.course_register.contact.referrer.display_name if !@delivery.course_register.contact.referrer.nil? %>
      </td>
      
    </tr>
    <tr>
      <td>
        <strong>Address:</strong>
      </td>
      <td colspan="2">
        <%= @delivery.course_register.mailing_address %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Phone:</strong>
      </td>
      <td colspan="2">
        <%= @delivery.course_register.contact.mobile %>
      </td>
    </tr>
  </table>
  <p></p>
  <table width="100%" cellpadding="10" class="list" cellspacing="0">
    <tr>
      <th width="1%">No.</th>
      <th>Title</th>
      <th>Book Type</th>
      <th>Book Vol.</th>
    </tr>
    <% @delivery.course_register.books.each_with_index do |row, index| %>
      <tr>
        <td class="text-center">
          <div><%= index+1 %></div>
          
        </td>
        <td class="text-left">
          <div><strong><%= row[:book].name %></strong></div>          
        </td>
        <td class="text-center">
          <%= row[:book].type_name %>
        </td>
        <td class="text-center">
          <%= row[:volumns].map(&:name).join("<br />") %>
        </td>
      </tr>  
    <% end %>
  </table>
  
  <p></p>
  <br />
  
  <table width="100%" cellpadding="10">
    <tr>
      <th>Received by</th>
      <th>Delivered by</th>      
    </tr>
    
  </table>
  
</div>