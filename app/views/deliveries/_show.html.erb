<style>
  * {
    font-family: arial;
  }
  .page {
    padding: 0;
  }
  .logo img {
    width: 220px;
    padding: 0;
    margin: 0;
  }
  .heading {
    text-align: center;
  }
  .text-left {
    text-align: left;
  }
  .text-center {
    text-align: center;
  }
  .list {
    width: 100%;
    margin-top: 20px;
    border-left: 1px solid #000000;
    border-top: 1px solid #000000;
    border-bottom: none;
    border-right: none;
  }
  .list th {
      background: none repeat scroll 0 0 #EFEFEF;
      border-bottom: 1px solid #000000;
      border-right: 1px solid #000000;
      border-top: none;
      border-left: none;
      padding: 5px;
  }
  .list td {
      border-bottom: 1px solid #000000;
      border-right: 1px solid #000000;
      border-top: none;
      border-left: none;
      padding: 5px;
  }
</style>

<div class="page">
  <div class="logo">
    <img src="<%= params[:action] == "print" ? "file://"+File.join(Rails.root, 'public', 'img', 'FTMSGlobalNew_transparent.png') : url_for("/img/FTMSGlobalNew_transparent.png") %>" class="login-logo" />
  </div>
  
  <div class="heading">
    <h1>DELIVERY NOTE</h1>
  </div>
  
  
  <table cellpadding="5">
    <tr>
      <td>
        <strong>Student:</strong>
      </td>
      <td width="60%">
        <%= @delivery.course_register.contact.display_name %>
      </td>
      <td>
        <strong>Date:</strong>
      </td>
      <td>
        <%= @delivery.delivery_date.strftime("%d-%b-%Y") %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Company:</strong>
      </td>
      <td colspan="2">
        <%= @delivery.course_register.contact.referrer.display_name if !@delivery.course_register.contact.referrer.nil? %>
      </td>
      
    </tr>
    <tr>
      <td>
        <strong>Address:</strong>
      </td>
      <td colspan="2">
        <%= @delivery.course_register.mailing_address %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Phone:</strong>
      </td>
      <td colspan="2">
        <%= @delivery.course_register.contact.mobile %>
      </td>
    </tr>
  </table>
  <p></p>
  <table width="100%" cellpadding="10" class="list" cellspacing="0">
    <tr>
      <th width="1%">No.</th>
      <th>Title</th>
      <th class="text-center">Book Type</th>
      <th class="text-center">Quantity</th>
    </tr>
    <% @delivery.delivery_details.each_with_index do |d, index| %>
      <tr>
        <td class="text-center">
          <div><%= index+1 %></div>
          
        </td>
        <td class="text-left">
          <div><strong><%= d.book.name %></strong></div>          
        </td>
        <td class="text-center">
          <%= d.book.type_name %>
        </td>
        <td class="text-center">
          <%= d.quantity %>
        </td>
      </tr>  
    <% end %>
  </table>
  
  <p></p>
  <br />
  
  <table width="100%" cellpadding="10">
    <tr>
      <th width="50%" class="text-center" valign="top">Received by
      </th>
      <th class="text-center" valign="top">Delivered by
      <br />
      <br />
      <br />
      <br />
      <br />
      <span style="font-weight: normal"><%= @delivery.user.name %></span>
      </th>      
    </tr>
    
  </table>
  
</div>