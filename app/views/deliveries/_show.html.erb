<style>
  * {
    font-family: arial;
  }
  .page {
    padding: 0;
    position: relative;
    min-height: 1000px;
  }
  .logo img {
    width: 220px;
    padding: 0;
    margin: 0;
  }
  .heading {
    text-align: center;
  }
  .text-left {
    text-align: left;
  }
  .text-center {
    text-align: center;
  }
  .list {
    width: 100%;
    margin-top: 20px;
    border-left: 1px solid #000000;
    border-top: 1px solid #000000;
    border-bottom: none;
    border-right: none;
  }
  .list th {
      background: none repeat scroll 0 0 #EFEFEF;
      border-bottom: 1px solid #000000;
      border-right: 1px solid #000000;
      border-top: none;
      border-left: none;
      padding: 5px;
  }
  .list td {
      border-bottom: 1px solid #000000;
      border-right: 1px solid #000000;
      border-top: none;
      border-left: none;
      padding: 5px;
  }
  .text-nowrap {
    white-space: nowrap;
  }
  .remark_to_admin {
    position: absolute;
    bottom: 0;
 }
</style>

<div class="page">
  <div class="logo">
    <img src="<%= params[:action] == "print" ? "file://"+File.join(Rails.root, 'public', 'img', 'FTMSGlobalNew_transparent.png') : url_for("/img/FTMSGlobalNew_transparent.png") %>" class="login-logo" />
  </div>
  
  <div class="heading">
    <h1>DELIVERY NOTE</h1>
  </div>
  
  
  <table cellpadding="5">
    <tr>
      <td>
        <strong>Student:</strong>
      </td>
      <td width="40%">
        <%= @delivery.course_register.contact.display_name %>
      </td>
      <td class="text-nowrap">
        <strong>Delivered Date:</strong>
      </td>
      <td class="text-nowrap">
        <%= @delivery.delivery_date.strftime("%d-%b-%Y") %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Company:</strong>
      </td>
      <td colspan="2">
        <%= @delivery.course_register.contact.referrer.display_name if !@delivery.course_register.contact.referrer.nil? %>
      </td>
      
    </tr>
    <tr>
      <td>
        <strong><%= @delivery.course_register.display_mailing_title %>:</strong>
      </td>
      <td colspan="2">
        <%= @delivery.course_register.display_mailing_address %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Phone:</strong>
      </td>
      <td colspan="2">
        <%= @delivery.course_register.contact.mobile %>
      </td>
    </tr>
  </table>
  <p></p>
  <table width="100%" cellpadding="10" class="list" cellspacing="0">
    <tr>
      <th width="1%">No.</th>
      <th class="text-left">Course</th>
      <th class="text-left">Book Type</th>
      <th class="text-center">Quantity</th>
    </tr>
    <% @delivery.delivery_details.each_with_index do |d, index| %>
      <tr>
        <td class="text-center">
          <div><%= index+1 %></div>          
        </td>
        <td class="text-left">
          <div><strong><%= (!d.books_contact.nil? and !d.books_contact.course.nil?) ? d.books_contact.course.display_name : d.book.paper_name %></strong></div>          
        </td>
        <td class="text-left">
          <%= d.book.type_name %>
          <div class=\"nowrap\"><%= d.book.display_valid_time %></div>
        </td>
        <td class="text-center">
          <%= d.quantity %>
        </td>
      </tr>  
    <% end %>
  </table>
  
  <p></p>
  <br />
  
  <table width="100%" cellpadding="10">
    <tr>
      <th width="50%" class="text-center" valign="top">Received by
      </th>
      <th class="text-center" valign="top">Delivered by
      <br />
      <br />
      <br />
      <br />
      <br />
      
      </th>      
    </tr>
    
  </table>
  
  <% if @delivery.course_register.contact.remark_to_admin.present? %>
    <div class="remark_to_admin">
      Remark to admin: <%= @delivery.course_register.contact.remark_to_admin %>
    </div>
  <% end %>
  
</div>