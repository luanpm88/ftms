                <div class="grid simple ">
                  <div class="grid-body no-border filters book-filter">
                  <div class="row order-filters">
					  <div class="col-md-3 student-book-filter">
						  <h4>Stock Type</h4>							
						  <%= select_tag 'stock_types[]', options_for_select(StockType.active_stock_types.collect{ |u| [u.name, u.id] }), class: "modern_select width100", multiple: true %>
					  </div>
                      <div class="col-md-3">
                        <h4>Program</h4>                        
						<%= select_tag 'filter[course_types[]]', options_for_select(CourseType.active_course_types.collect{ |u| [u.short_name, u.id] }), :include_blank => 'All', class: "modern_select width100" %>
                      </div>
					  
					  <div class="col-md-3">
                        <h4>Paper</h4>                        
						<div class="subjects-filter-box">
							<%= select_tag 'filter[subjects[]]', options_for_select(Subject.active_subjects.collect{ |u| [u.name, u.id] }), :include_blank => 'All', class: "modern_select width100" %>
						</div>
                      </div>
						
					  <div class="col-md-3 student-book-filter">
						  <h4>Student</h4>                        
						  <div class="lecturers-filter-box">
							  <input style="width:100%;margin-bottom: 5px;" name="student" data="<%= contacts_path(is_individual: true, contact_type_id: ContactType.student.id,format: "json") %>" class="select2-ajax-contacts" value="<%= @contact.id if !@contact.nil? %>" text="<%= @contact.display_name if !@contact.nil? %>" />
						  </div>
					  </div>
					  
					  <div class="col-md-3 student-book-filter">
						  <h4>Status</h4>							
						  <%= select_tag 'status', options_for_select(Book.status_options, params[:status]), class: "modern_select width100" %>
					  </div>
						
                  </div>
                  </div>		    
				</div>