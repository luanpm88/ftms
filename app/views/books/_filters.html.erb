                <div class="grid simple ">
                  <div class="grid-body no-border filters book-filter">
                  <div class="row order-filters">
					  <div class="col-md-3 student-book-filter">
						  <h4>Stock Type</h4>							
						  <%= select_tag 'stock_types[]', options_for_select(StockType.active_stock_types.collect{ |u| [u.name, u.id] }), class: "modern_select width100", multiple: true %>
					  </div>
                      <div class="program_paper_select_box">
											<div class="col-md-3">
												<h4>Program</h4>							
												<%= select_tag 'filter[course_types[]]', options_for_select(CourseType.active_course_types.collect{ |u| [u.short_name, u.id] }), class: "modern_select width100 program_select", multiple: "multiple", input_name: "filter[subjects[]]" %>
											</div>							
											<div class="col-md-3">
												<h4>Paper</h4>
												<span class="paper_select_box">
													<%= select_tag 'filter[subjects[]]', options_for_select(Subject.active_subjects.collect{ |u| [u.name, u.id] }), class: "modern_select width100", multiple: "multiple" %>
												</span>
											</div>
										</div>		
						
					  <div class="col-md-3 student-book-filter hidden">
						  <h4>Student</h4>                        
						  <div class="lecturers-filter-box">
							  <input style="width:100%;margin-bottom: 5px;" name="student" data="<%= contacts_path(is_individual: true, contact_type_id: ContactType.student.id,format: "json") %>" class="select2-ajax-contacts" value="<%= @contact.id if !@contact.nil? %>" text="<%= @contact.display_name if !@contact.nil? %>" />
						  </div>
					  </div>
					  
					  <div class="col-md-3 student-book-filter">
						  <h4>Status</h4>							
						  <%= select_tag 'status', options_for_select(Book.status_options, params[:status]), class: "modern_select width100" %>
					  </div>
						
                  </div>
					  
					  <div class="row">
								<div class="col-md-3">

										<h4>Valid on</h4>	
										<div class="input-append success date col-md-10 no-padding">
											<span class="add-on"><span class="arrow"></span><i class="icon-th"></i></span>
											<%= text_field_tag :valid_on, Time.now.strftime("%d-%b-%Y"), :class => "form-control" %>
										</div>
										<br style="clear: both" />
								</div>
							  
					</div>	
					  
					  
                  </div>
						  
				  
				  
						  
				</div>