       <div class="row">
            <div class="col-md-12">
              <div class="grid simple">
                <div class="grid-title no-border">
                  <h4>Bank Account <span class="semi-bold">Details</span></h4>
                  
                </div>     
                
                
                
                
                <div class="grid-body no-border">
                  
                  
                  <% if @bank_account.errors.any? %>
                    <div class="alert alert-error">
                      <button data-dismiss="alert" class="close"></button>
                      <div id="error_explanation">
                        <h5><%= pluralize(@bank_account.errors.count, "error") %> prohibited this bank account from being saved:</h5>
                  
                        <ul>
                        <% @bank_account.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                        </ul>
                      </div>
                    </div>
                  <% end %>
                    
                 
                  
                  
                  <%= form_for(@bank_account) do |f| %>
					
					<%= hidden_field_tag("tab_page", 1) if params[:tab_page] %>
					
					<div class="row column-seperation <%= "draft_form" if @bank_account.draft? %>">
						 <div class="col-md-6">
							  
							  <div class="form-group">
								<label class="form-label"><%= f.label :name %></label>
								<span class="help">(required)</span>
								<%= render "field_history", drafts: @bank_account.field_history("name"), type: "name" %>
								<div class="input-with-icon  right">                                       
									<i class=""></i>
									  <%= f.text_field :name, :class => "form-control required" %>
								</div>
							  </div>
							  
							  <div class="form-group">
                                    <label class="form-label"><%= f.label :bank_name %></label>
                                    <span class="help">(required)</span>
									<%= render "field_history", drafts: @bank_account.field_history("bank_name"), type: "bank_name" %>
                                    <div class="input-with-icon  right">                                       
                                      <%= f.text_field :bank_name, :class => "form-control required" %>
                                    </div>
                               </div>
							  
						 </div>
						 <div class="col-md-6">
							  <div class="form-group">
								<label class="form-label"><%= f.label :account_name %></label>
								<span class="help">(required)</span>
								<%= render "field_history", drafts: @bank_account.field_history("account_name"), type: "account_name" %>
								<div class="input-with-icon  right">                                       
									<i class=""></i>
									  <%= f.text_field :account_name, :class => "form-control required" %>
								</div>
							  </div>
                              
                              <div class="form-group">
								<label class="form-label"><%= f.label :account_number %></label>
								<span class="help">(required)</span>
								<%= render "field_history", drafts: @bank_account.field_history("account_number"), type: "account_number" %>
								<div class="input-with-icon  right">                                       
									<i class=""></i>
									  <%= f.text_field :account_number, :class => "form-control required" %>
								</div>
							  </div>
						 </div>
						 
						 
					</div>
						 
					<div class="form-actions">  
						 <div class="pull-right">
						 <button type="submit" class="btn btn-success btn-cons"><i class="icon-ok"></i> Save</button>
						  <%= link_to 'Cancel', users_path, :class => "btn btn-white btn-cons cancel-but" %>
					   </div>
					</div>
							  
						<% end %>
			   </div>
			 </div>
            </div>
			
     </div>
