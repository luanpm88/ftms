              <div class="grid simple ">
                  <div class="grid-body no-border filters course-register-filter">
						<div class="row order-filters">
							
								  <div class="col-md-3">
									  <h4>Intake</h4>
									  <div class="date_select_filter">
										  <div class="input-with-icon date-group-my right">                                       
										  <%= date_select(:filter, :intake, {include_blank: true, use_short_month: true}) %>
										  </div>
									  </div>
								  </div>							
								  <div class="program_paper_select_box">
											<div class="col-md-3">
												<h4>Program</h4>							
												<%= select_tag 'course_types[]', options_for_select(CourseType.active_course_types.collect{ |u| [u.short_name, u.id] }), class: "modern_select width100 program_select", multiple: "multiple", input_name: "subjects[]" %>
											</div>							
											<div class="col-md-3">
												<h4>Paper</h4>
												<span class="paper_select_box">
													<%= select_tag 'subjects[]', options_for_select(Subject.active_subjects.collect{ |u| [u.name, u.id] }), class: "modern_select width100", multiple: "multiple" %>
												</span>
											</div>
									</div>
											
											
											
								  <div class="col-md-3">
									  <h4>Course</h4>							
									  <input style="width:100%;margin-bottom: 5px;" name="courses" data="<%= courses_path(format: "json") %>" class="select2-ajax-courses" value="<%= @course.id if !@course.nil? %>" text="<%= @course.display_name if !@course.nil? %>" />
								  </div>
								  
								  <div class="col-md-3 student-course-register-filter">
									  <h4>Student</h4>                        
									  <div class="lecturers-filter-box">
										  <input style="width:100%;margin-bottom: 5px;" name="student" data="<%= contacts_path(is_individual: true, contact_type_id: ContactType.student.id,format: "json") %>" class="select2-ajax-contacts" value="<%= @contact.id if !@contact.nil? %>" text="<%= @contact.display_name if !@contact.nil? %>" />
									  </div>
								  </div>
								  
								  
							
							
						</div>
									  
						<div class="row">
							<div class="col-md-3 student-course-register-filter">
							  <h4>Student</h4>                        
							  <div class="lecturers-filter-box">
								  <input style="width:100%;margin-bottom: 5px;" name="student" data="<%= contacts_path(is_individual: true, contact_type_id: ContactType.student.id,format: "json") %>" class="select2-ajax-contacts" value="<%= @contact.id if !@contact.nil? %>" text="<%= @contact.display_name if !@contact.nil? %>" />
							  </div>
							</div>
							<div class="col-md-3">
								<h4>Education Consultant</h4>
								<div class="">
									<%= select_tag 'user', options_for_select(User.main_users.collect{ |u| [u.name, u.id] }) , {:include_blank => 'All', class: "modern_select width100"} %>
								</div>
							</div>
						</div>			  
									  
						
						<div class="row order-filters">
							
								  <div class="col-md-2">
									  <h4>Payment Status</h4>
										<div class="input-with-icon  right">                                       
											<i class=""></i>
											<select name="payment_statuses" class="modern_select width100">
												<option value="">All</option>
												<option value="chase_for_payment">Chase for payment</option>
												<option value="receivable">Receivable</option>
												<option value="fully_paid">Fully paid</option>
											</select>
										</div>
								  </div>
								  
								  <div class="col-md-2">
									  <h4>Delivery Status</h4>
										<div class="input-with-icon  right">                                       
											<i class=""></i>
											<select name="delivery_statuses" class="modern_select width100">
												<option value="">All</option>
												<option value="delivered">Delivered</option>
												<option value="not_delivered">Not Delivered</option>
											</select>
										</div>
								  </div>
								  
									<div class="col-md-3">
										<h4>Status</h4>							
										<%= select_tag 'status', options_for_select(CourseRegister.status_options, params[:status]), class: "modern_select width100" %>
									</div>
								  
							
						</div>
                  </div>		    
				</div>