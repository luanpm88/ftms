<p id="notice"><%= notice %></p>

<h1>Listing Stock Updates</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Book</th>
      <th>Quantity</th>
      <th>Created date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stock_updates.each do |stock_update| %>
      <tr>
        <td><%= stock_update.type %></td>
        <td><%= stock_update.book_id %></td>
        <td><%= stock_update.quantity %></td>
        <td><%= stock_update.created_date %></td>
        <td><%= stock_update.user_id %></td>
        <td><%= link_to 'Show', stock_update %></td>
        <td><%= link_to 'Edit', edit_stock_update_path(stock_update) %></td>
        <td><%= link_to 'Destroy', stock_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

