<%= javascript_include_tag "jquery-1.8.3.min.js" %>

<%= params[:tid] %>

<script>
    var cid = window.parent.$("#main-tab li.active a").attr("href").replace("#","")
    
    <% if !@contact.nil? %>
        parent.openTab("<%= url_for({controller: "contacts", action: "edit", id: @contact.id, tab_page: 1}) %>", "<%= @contact.display_name %>")
    <% end %>
    
    <% if !@tab.nil? %>
        parent.openTab("<%= url_for(@tab[:url]) %><%= @tab[:subfix] %>", "<%= @tab[:title] %>")
    <% end %>

    parent.closeTab(cid)
    
</script>